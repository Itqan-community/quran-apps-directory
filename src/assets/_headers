# Cloudflare Pages Security Headers Configuration

# HTML files - Prevent caching to avoid stale references
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()
  Cache-Control: public, max-age=0, must-revalidate

# Hashed static assets - long-term immutable caching
# NOTE: Do NOT set Content-Type here. Cloudflare Pages detects MIME types
# automatically for real files. Overriding Content-Type causes SPA fallback
# HTML to be mislabeled as JS/CSS when old hashed files no longer exist.

/main-*.js
  Cache-Control: public, max-age=31536000, immutable

/polyfills-*.js
  Cache-Control: public, max-age=31536000, immutable

/chunk-*.js
  Cache-Control: public, max-age=31536000, immutable

/styles-*.css
  Cache-Control: public, max-age=31536000, immutable

# Translation files - must stay fresh, not hashed
/assets/i18n/*.json
  Cache-Control: no-store, must-revalidate

# Font files - never change, cache forever
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Image assets - 7-day cache with revalidation
/assets/images/*
  Cache-Control: public, max-age=604800, must-revalidate

# PWA manifest - must stay fresh, not hashed
/manifest.webmanifest
  Cache-Control: no-cache, must-revalidate

# Cleanup service worker - no caching
/sw.js
  Cache-Control: no-cache, must-revalidate
