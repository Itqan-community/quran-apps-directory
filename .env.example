# Quran Apps Directory - Environment Configuration Example
# Copy this file to .env and configure the values for your local development

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server port (default: 4200)
NG_DEV_PORT=4200

# Environment mode
NODE_ENV=development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Base API URL for external services (if any)
# NG_APP_API_BASE_URL=https://api.example.com

# Google Analytics ID (optional)
# NG_APP_GA_ID=G-XXXXXXXXXX

# =============================================================================
# SEO CONFIGURATION
# =============================================================================

# Site domain (used for sitemap generation and meta tags)
NG_APP_SITE_DOMAIN=https://quran-apps.itqan.dev

# Organization contact email
NG_APP_CONTACT_EMAIL=connect@itqan.dev

# Social media handles (without @ symbol)
NG_APP_TWITTER_HANDLE=itqan_community
NG_APP_GITHUB_ORG=Itqan-community

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable dark mode feature
NG_APP_ENABLE_DARK_MODE=true

# Enable analytics
NG_APP_ENABLE_ANALYTICS=false

# Enable service worker
NG_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Build optimization level (development, staging, production)
NG_BUILD_OPTIMIZATION=development

# Enable source maps in production
NG_APP_SOURCE_MAPS=false

# =============================================================================
# CONTENT CONFIGURATION
# =============================================================================

# Default language
NG_APP_DEFAULT_LANG=en

# Supported languages (comma-separated)
NG_APP_SUPPORTED_LANGS=en,ar

# Content delivery network URL (optional)
# NG_APP_CDN_URL=https://cdn.example.com

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable development tools in production
NG_APP_DEV_TOOLS=false

# Enable hot module replacement
NG_APP_HMR=true

# Debug mode
NG_APP_DEBUG=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Netlify deployment configuration
# NETLIFY_SITE_ID=your-site-id

# Google Search Console verification
# NG_APP_GOOGLE_SITE_VERIFICATION=your-verification-code

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Enable service worker caching
NG_APP_CACHE_ENABLED=true

# Cache duration in seconds (default: 1 day)
NG_APP_CACHE_DURATION=86400

# Enable image optimization
NG_APP_OPTIMIZE_IMAGES=true

# Enable bundle analysis
NG_APP_BUNDLE_ANALYZER=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Content Security Policy (CSP) mode
NG_APP_CSP_MODE=strict

# Enable HTTPS redirects
NG_APP_FORCE_HTTPS=true
